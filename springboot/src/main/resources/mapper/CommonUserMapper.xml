<!--    </resultMap>-->

    <select id="selectByAccount" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        common_user
        WHERE
        account_name = #{userName}
        AND account_password = #{password};
    </select>


    <select id="selectByAccountName" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        common_user
        WHERE
        account_name = #{userName};
    </select>

    <select id="selectById" parameterType="int" resultMap="BaseResultMap">
        SELECT
            userID,
            account_name,
            account_password,
            user_name,
            user_sex,
            birthday,
            birth_place,
            TTC_level,
            mail
        FROM
            common_user
        WHERE
            userID = #{userId}
    </select>



</mapper>
