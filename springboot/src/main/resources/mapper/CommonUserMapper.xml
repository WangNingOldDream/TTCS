<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.CommonUserMapper">

    <resultMap id="BaseResultMap" type="com.example.entity.CommonUser">
            <id property="userid" column="userID" jdbcType="INTEGER"/>
            <result property="accountName" column="account_name" jdbcType="VARCHAR"/>
            <result property="accountPassword" column="account_password" jdbcType="VARCHAR"/>
            <result property="userName" column="user_name" jdbcType="VARCHAR"/>
            <result property="userSex" column="user_sex" jdbcType="VARCHAR"/>
            <result property="birthday" column="birthday" jdbcType="DATE"/>
            <result property="birthPlace" column="birth_place" jdbcType="VARCHAR"/>
            <result property="ttcLevel" column="TTC_level" jdbcType="VARCHAR"/>
            <result property="mail" column="mail" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        userID,account_name,account_password,
        user_name,user_sex,birthday,
        birth_place,TTC_level,mail,
        avatar
    </sql>
    <select id="selectAllInComp" resultType="com.example.entity.SimpleUserInfo">
        SELECT role.user_id, common_user.account_name, common_user.avatar
        FROM role JOIN common_user ON role.user_id = common_user.userID
        WHERE role.competition_id = #{compId,jdbcType=NUMERIC};
    </select>

